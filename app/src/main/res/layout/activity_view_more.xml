<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/viewscreen"
    android:orientation="vertical"
    tools:context=".childUi.ViewMore">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/deleting_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/view_more_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/deleteBook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|end" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_back_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Sender"
                        android:textColor="@color/purple_200"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/origin_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/destination_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/calendatfield"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weight_field"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/weight"
                            android:ems="10"
                            android:paddingStart="20dp"
                            android:paddingTop="15dp" />

                        <Spinner
                            android:id="@+id/unit_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/unit"
                            android:entries="@array/unit"
                            android:paddingStart="20dp" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pieces_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:ems="10"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/length_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:ems="10"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/width_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:ems="10"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/height_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/inputfield"
                        android:ems="10"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />

                    <TextView
                        android:id="@+id/volume_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/volumevalueinput"
                        android:ems="10"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/agent_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/inputfield"
                android:paddingStart="20dp"
                android:paddingTop="20dp"/>

            <TextView
                android:id="@+id/total_volume_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/volumevalueinput"
                android:ems="10"
                android:paddingStart="20dp"
                android:paddingTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Consignee"
                        android:textColor="@color/purple_200"
                        android:textSize="20sp" />

                    <TextView
                    android:id="@+id/name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/address_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/country_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/city_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/state_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/phone_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/zipcode_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:ems="10"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:visibility="visible" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#00C42E" />

                <TextView
                    android:id="@+id/price_class_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"/>

                <TextView
                    android:id="@+id/handling_code_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"/>

                <TextView
                    android:id="@+id/commodity_code_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/inputfield"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>