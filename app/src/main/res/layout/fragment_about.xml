<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about_us.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aboutus1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aboutus2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aboutus3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/aboutus4" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>